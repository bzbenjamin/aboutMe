.footer {
	position: absolute;
	bottom: 0;
	width: 100%;
	/* Set the fixed height of the footer here */
	height: 60px;
	background-color: #f5f5f5;
}

#tagline {
	font-family: nexa_regular;
	font-weight: 400;
	font-style: normal;
	text-align: center;
	color: #000000;
	font-size: 15px;
	text-transform: uppercase;
	margin: 0 auto;
	display: block;
	padding: 1em 0
}

#contact div {
	margin-top: 1em;
}

#contact form {
	margin-top: 1em;
}

#contact label {
	display: inline-block;
	width: 100px;
	text-align: right;
}

#contact_submit {
	padding-left: 100px;
}

#contact_message {
	vertical-align: top;
	height: 10em;
	width: 17em;
	size: fixed;
}

input.invalid, textarea.invalid {
	border: 2px solid red;
}

input.valid, textarea.valid {
	border: 2px solid green;
}

.error {
	display: none;
	margin-left: 10px;
}

.error_show {
	color: red;
	margin-lfet: 10px;
}

